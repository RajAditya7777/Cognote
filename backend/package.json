    "dependencies": {
        "@google/generative-ai": "^0.24.1",
        "@prisma/adapter-pg": "^5.22.0",
        "@prisma/client": "^5.22.0",
        "axios": "^1.13.2",
        "bcryptjs": "^2.4.3",
        "cors": "^2.8.5",
        "dotenv": "^16.4.5",
        "express": "^4.21.1",
        "jsonwebtoken": "^9.0.2",
        "multer": "^1.4.5-lts.1",
        "pdf-parse": "^1.1.1",
        "pg": "^8.13.1"
    },
    "devDependencies": {
        "nodemon": "^3.1.7",
        "prisma": "^5.22.0"
    }
