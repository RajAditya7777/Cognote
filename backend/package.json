{
    "name": "cognote-backend",
    "version": "1.0.0",
    "description": "Backend API for CogNote - Note-taking app with AI features",
    "main": "server.js",
    "type": "commonjs",
    "scripts": {
        "start": "node server.js",
        "dev": "nodemon server.js",
        "build": "rm -rf node_modules/.prisma node_modules/@prisma/client && prisma generate",
