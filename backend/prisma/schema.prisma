// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
  previewFeatures = ["driverAdapters"]
}

datasource db {
  provider = "postgresql"
  url = env("DATABASE_URL")
  directUrl = env("DIRECT_URL") // Used for direct connection to Neon
}

model User {
  id        String    @id @default(cuid())
  email     String    @unique
  password  String
  name      String?
  files     File[]    @relation("UserFiles")
  notes     Note[]    @relation("UserNotes")
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
}

model File {
  id            String    @id @default(cuid())
  filename      String
  filepath      String
  extractedText String?   @db.Text
  userId        String
  user          User      @relation("UserFiles", fields: [userId], references: [id], onDelete: Cascade)
  notes         Note[]    @relation("FileNotes")
  summary       Summary?
  flashcards    Flashcard[]
  quiz          Quiz[]
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt

  @@index([userId])
}

model Note {
  id        String    @id @default(cuid())
  content   String    @db.Text
  fileId    String?
  file      File?     @relation("FileNotes", fields: [fileId], references: [id], onDelete: Cascade)
  userId    String
  user      User      @relation("UserNotes", fields: [userId], references: [id], onDelete: Cascade)
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt

  @@index([userId])
  @@index([fileId])
}

model Summary {
  id        String    @id @default(cuid())
  content   String    @db.Text
  fileId    String    @unique
  file      File      @relation(fields: [fileId], references: [id], onDelete: Cascade)
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
}

model Flashcard {
  id        String    @id @default(cuid())
  front     String    @db.Text
  back      String    @db.Text
  fileId    String
  file      File      @relation(fields: [fileId], references: [id], onDelete: Cascade)
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt

  @@index([fileId])
}

model Quiz {
  id        String    @id @default(cuid())
  question  String    @db.Text
  options   String[]
  answer    String    @db.Text
  fileId    String
  file      File      @relation(fields: [fileId], references: [id], onDelete: Cascade)
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt

  @@index([fileId])
}
