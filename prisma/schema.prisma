generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url = env("DATABASE_URL")
  directUrl = env("DIRECT_URL") // Used for direct connection to Neon
}

model User {
  id        String    @id @default(cuid())
  email     String    @unique
  password  String
  name      String?
  todos     Todo[]    @relation("UserTodos")
  files     File[]
  notes     Note[]
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
  messages  Message[]
  customPrompt String?
  username  String?
}

model Message {
  id        String   @id @default(cuid())
  content   String   @db.Text
  role      String
  userId    String
  user      User     @relation(fields: [userId], references: [id])
  fileId    String?
  createdAt DateTime @default(now())

  @@index([userId])
  @@index([fileId])
}

model Todo {
  id          String    @id @default(cuid())
  title       String
  description String?
  completed   Boolean   @default(false)
  userId      String
  user        User      @relation("UserTodos", fields: [userId], references: [id])
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt

  @@index([userId])
}

model File {
  id            String    @id @default(cuid())
  filename      String
  filepath      String
  extractedText String    @db.Text
  userId        String
  user          User      @relation(fields: [userId], references: [id])
  notes         Note[]
  notebookId    String?
  notebook      Notebook? @relation(fields: [notebookId], references: [id])
  summary       Summary?
  flashcards    Flashcard[]
  quiz          Quiz[]
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt

  @@index([userId])
}

model Note {
  id        String   @id @default(cuid())
  content   String   @db.Text
  fileId    String
  file      File     @relation(fields: [fileId], references: [id], onDelete: Cascade)
  userId    String
  user      User     @relation(fields: [userId], references: [id])
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([fileId])
  @@index([userId])
}

model Summary {
  id        String   @id @default(cuid())
  content   String   @db.Text
  fileId    String   @unique
  file      File     @relation(fields: [fileId], references: [id], onDelete: Cascade)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Flashcard {
  id        String   @id @default(cuid())
  front     String   @db.Text
  back      String   @db.Text
  fileId    String
  file      File     @relation(fields: [fileId], references: [id], onDelete: Cascade)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([fileId])
}

model Quiz {
  id        String   @id @default(cuid())
  question  String   @db.Text
  options   String[]
  answer    String   @db.Text
  explanations Json?  @db.JsonB
  hint      String?  @db.Text
  fileId    String
  file      File     @relation(fields: [fileId], references: [id], onDelete: Cascade)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([fileId])
}
model Notebook {
  id           String   @id @default(cuid())
  title        String
  userId       String
  customPrompt String?
  files        File[]
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt

  @@index([userId])
}
